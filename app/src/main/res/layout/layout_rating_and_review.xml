<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/first_toolbar" />

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="86dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="25dp"
            android:layout_height="16dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/icon_back" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtMyReview"
        android:layout_width="165dp"
        android:layout_height="22dp"
        android:layout_marginLeft="129dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/inter_bold"
        android:text="Đánh giá đơn hàng"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="360dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="26dp"
        android:background="@drawable/drawable_roundstyle"
        android:layout_marginTop="89.5dp"
        app:srcCompat="?attr/actionModeBackground" />
    <TextView
        android:id="@+id/txtReview"
        android:layout_width="115dp"
        android:layout_height="15dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="96dp"
        android:text="ĐÁNH GIÁ DỊCH VỤ"
        android:textColor="@color/mainGray"
        android:fontFamily="@font/inter_medium"
        android:textSize="12sp"/>
    <EditText
        android:id="@+id/edittxtFullName"
        android:layout_width="366dp"
        android:layout_height="48dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/drawable_custom_editext"
        android:hint="Nhập họ và tên"
        android:paddingLeft="18dp"
        android:textColor="#D9D9D9" />

    <EditText
        android:id="@+id/edittxtEmail"
        android:layout_width="366dp"
        android:layout_height="48dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/drawable_custom_editext"
        android:hint="Nhập Email"
        android:paddingLeft="18dp"
        android:textColor="#D9D9D9" />

    <TextView
        android:id="@+id/edittxtReview"
        android:layout_width="125dp"
        android:layout_height="20dp"
        android:layout_marginTop="248dp"
        android:layout_marginLeft="23dp"
        android:fontFamily="@font/inter_medium"
        android:text="Đánh giá dịch vụ *"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/edittxtReviewOverall"
        android:layout_width="366dp"
        android:layout_height="48dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="275dp"
        android:background="@drawable/drawable_custom_editext"
        android:hint="Đánh giá tổng quan (giới hạn 150 kí tự)"
        android:paddingLeft="18dp"
        android:textColor="#D9D9D9" />

    <EditText
        android:id="@+id/edittxtReviewDetailed"
        android:layout_width="366dp"
        android:layout_height="100dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/drawable_custom_editext"
        android:hint="Nhập đánh giá chi tiết cho đơn hàng, giới hạn 2000 kí tự (không bắt buộc)"
        android:padding="12dp"
        android:gravity="top"
        android:textColor="#D9D9D9" />
    <Button
        android:id="@+id/btnSend"
        android:layout_width="116dp"
        android:layout_height="48dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="450dp"
        android:backgroundTint="@color/mainPurple"
        android:text="GỬI"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtSend"
        android:layout_width="35dp"
        android:layout_height="16dp"
        android:layout_marginTop="465dp"
        android:layout_marginLeft="74dp"
        android:fontFamily="@font/inter_medium"
        android:text="GỬI"
        android:textColor="@color/white"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/imgStar1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="248dp"
        android:layout_marginLeft="147dp"
        app:srcCompat="@android:drawable/star_big_off" />
    <ImageView
        android:id="@+id/imgStar2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="248dp"
        android:layout_marginLeft="167dp"
        app:srcCompat="@android:drawable/star_big_off" />
    <ImageView
        android:id="@+id/imgStar3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="248dp"
        android:layout_marginLeft="187dp"
        app:srcCompat="@android:drawable/star_big_off" />
    <ImageView
        android:id="@+id/imgStar4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="248dp"
        android:layout_marginLeft="207dp"
        app:srcCompat="@android:drawable/star_big_off" />
    <ImageView
        android:id="@+id/imgStar5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="248dp"
        android:layout_marginLeft="227dp"
        app:srcCompat="@android:drawable/star_big_off" />
</RelativeLayout>
