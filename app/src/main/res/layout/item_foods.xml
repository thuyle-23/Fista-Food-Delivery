<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="40dp"
    android:paddingTop="10dp"
    android:paddingRight="40dp"
    android:paddingBottom="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/image_item_food"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:maxWidth="80dp"
            android:maxHeight="80dp"
            app:srcCompat="@drawable/pic_drink" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_shop"
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/inter_semibold"
                android:text="Quán Ông Tám - Lẩu Nướng Bình Dân"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/type_of_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="Cà phê sữa"
                android:textColor="@color/mainGray"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/icon_starrating" />

                <TextView
                    android:id="@+id/num_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_semibold"
                    android:text="4.0"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/quantity_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_semibold"
                    android:paddingLeft="5dp"
                    android:text="(15+)"
                    android:textColor="@color/mainGray" />

                <TextView
                    android:id="@+id/distance_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_semibold"
                    android:paddingLeft="25dp"
                    android:text="1.2 km"
                    android:textColor="@color/mainGray" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>