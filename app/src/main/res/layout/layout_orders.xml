<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.OrdersActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="0dp"
        android:translationZ="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center"
            android:paddingHorizontal="14dp"
            app:layout_scrollFlags="noScroll">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="17dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/icon_back"
                android:visibility="visible" />

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_shows_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:padding="1dp"
                    android:text="Đơn hàng của tôi"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </TableRow>


            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="10dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="false"
                android:src="@drawable/icon_remove"
                android:visibility="invisible" />

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_anchorGravity="bottom"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="714dp"
                android:layout_height="752dp"
                android:layout_marginLeft="-169dp"
                android:layout_marginTop="-200dp"
                app:srcCompat="@drawable/ellipse_6" />
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnOrders"
        android:layout_width="139dp"
        android:layout_height="55dp"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="621dp"
        android:backgroundTint="@color/mainPurple"
        android:fontFamily="@font/inter_bold"
        android:text="Đặt món"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="8dp" />


    <LinearLayout
        android:id="@+id/imgMyOrders"
        android:layout_width="291dp"
        android:layout_height="452dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="128dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/drawable_roundstyle"
        />

    <ImageView
        android:id="@+id/imgOrders"
        android:layout_width="208.73dp"
        android:layout_height="164dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="212dp"
        app:srcCompat="@drawable/group_6"
        />
    <TextView
        android:id="@+id/txtNotiOrders"
        android:layout_width="279dp"
        android:layout_height="24dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="458dp"
        android:fontFamily="@font/inter_bold"
        android:text="KHÔNG TỒN TẠI  ĐƠN HÀNG "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="19sp" />
    <TextView
        android:id="@+id/txtOrders"
        android:layout_width="162dp"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:layout_marginTop="498dp"
        android:layout_marginLeft="124dp"
        android:fontFamily="@font/inter_medium"
        android:text="Looks like you haven’t made
your order yet"
        android:textColor="@color/black"
        android:textSize="12sp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>