<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SignInActivity">
    <include layout="@layout/first_toolbar"/>

    <Button
        android:id="@+id/btnGoogle"
        android:layout_width="312dp"
        android:layout_height="55dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="370dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/drawable_google"
        android:fontFamily="@font/inter_bold"
        android:text="@string/btn_google"
        android:foreground="?android:attr/selectableItemBackground"
        android:textAllCaps="false"
        android:textColor="@color/mainGray"
        android:textSize="16sp"
        app:cornerRadius="20dp"
        app:strokeColor="@color/mainPurple"
        app:strokeWidth="1dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnFacebook"
        android:layout_width="312dp"
        android:layout_height="55dp"
        android:layout_alignStart="@+id/btnGoogle"
        android:layout_marginStart="0dp"
        android:layout_marginTop="440dp"
        android:backgroundTint="@color/aquaBlue"
        android:drawableLeft="@drawable/drawable_facebook"
        android:fontFamily="@font/inter_bold"
        android:text="@string/btn_facebook"
        android:foreground="?android:attr/selectableItemBackground"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="20dp"
        app:strokeColor="@color/aquaBlue" />

    <TextView
        android:id="@+id/txtPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_alignStart="@+id/btnFacebook"
        android:layout_marginStart="0dp"
        android:layout_marginTop="550dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/label_phoneNumber1"
        android:textColor="@color/mainPurple"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/txtPhoneNumber1"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_alignStart="@+id/btnFacebook"
        android:layout_marginStart="0dp"
        android:layout_marginTop="600dp"
        android:fontFamily="@font/inter_bold"
        android:text="Đăng ký tạo tài khoản mới"
        android:textColor="@color/mainPurple"
        android:textSize="16sp" />
</RelativeLayout>